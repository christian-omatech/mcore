{
  "name": "omatech/mcore",
  "require": {
    "php": "^8.1",
    "lambdish/phunctional": "^2.1",
    "webonyx/graphql-php": "^14.11"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^9.0",
    "infection/infection": "^0",
    "nunomaduro/phpinsights": "^2.0",
    "symfony/var-dumper": "^6.0",
    "mockery/mockery": "^1.4",
    "fakerphp/faker": "^1.0",
    "phpstan/phpstan": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "Omatech\\Mcore\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit",
    "infection": "vendor/bin/infection -j8 --coverage=build --skip-initial-tests",
    "test": [
      "@phpunit",
      "@infection"
    ],
    "phpinsights": "vendor/bin/phpinsights analyse --verbose --config-path=rules.php --no-interaction --fix src",
    "phpstan": "vendor/bin/phpstan analyse -l 6 src",
    "analyse": [
      "@phpinsights"
    ]
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
